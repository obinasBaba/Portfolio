{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    //    "plugins": [{ "name": "typescript-plugin-css-modules" }],

    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@global/*": [
        "./src/styles/global-style/*"
      ],
      "@/styles/*": [
        "./src/styles/*"
      ],
      "@style": [
        "./src/styles/sass-styles/index.scss"
      ],
      "@/public/*": [
        "./public/*"
      ],
      "@global": ["./src/styles/sass-styles/global-style/index.scss"],
      "@components/*": ["./src/components/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@helpers/*": ["./src/helpers/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.scss",
    "**/*.module.scss"
  ]
}
